---
interface Props {
  title?: string;
}

const { title = "Dewang Gogte" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content="Startup operator based in Bangalore. Open to freelance, consulting, and part-time work.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:opsz,wght@8..60,400;8..60,500&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <slot />
    </div>
</body>
</html>

<style is:global>
    :root {
        --bg: #fdfcfb;
        --text: #2c2c2c;
        --text-light: #666;
        --accent: #b85a3b;
        --border: #e8e6e3;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Source Serif 4', Georgia, serif;
        background: var(--bg);
        color: var(--text);
        font-size: 18px;
        line-height: 1.7;
    }

    .container {
        max-width: 640px;
        margin: 0 auto;
        padding: 4rem 3.5rem;
    }

    a {
        color: var(--accent);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    header {
        margin-bottom: 1rem;
    }

    h1 {
        font-size: 1.5rem;
        font-weight: 500;
        margin-bottom: 0.25rem;
    }

    .location {
        color: var(--text-light);
        font-size: 1rem;
    }

    .available {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        color: var(--text-light);
        margin-bottom: 2.5rem;
    }

    .available::before {
        content: '‚óè';
        color: #4a9;
        font-size: 0.6rem;
    }

    .bio {
        margin-bottom: 2rem;
    }

    .bio p {
        margin-bottom: 1rem;
    }

    .bio p:last-child {
        margin-bottom: 0;
    }

    .links-section {
        padding-top: 3.5rem;
        border-top: 1px solid var(--border);
    }

    .links-section h2 {
        font-size: 0.85rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--text-light);
        margin-bottom: 1rem;
    }

    .links {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .links a {
        color: var(--text);
        border-bottom: 1px solid var(--border);
        padding-bottom: 2px;
    }

    .links a:hover {
        border-color: var(--accent);
        text-decoration: none;
    }
</style>
